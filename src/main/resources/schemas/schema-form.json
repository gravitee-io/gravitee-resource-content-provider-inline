{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "content": {
            "type": "string",
            "title": "Content",
            "description": "The content to provide",
            "format": "gio-code-editor"
        },
        "attributes": {
            "type": "array",
            "title": "Attributes",
            "description": "List of attributes as key value pairs",
            "items": {
                "type": "object",
                "title": "Attribute",
                "properties": {
                    "key": {
                        "title": "Key",
                        "type": "string"
                    },
                    "value": {
                        "title": "Value",
                        "type": "string"
                    }
                }
            },
            "required": ["name", "value"]
        }
    },
    "required": ["content"]
}
